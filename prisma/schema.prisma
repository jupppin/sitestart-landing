// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model IntakeSubmission {
  id              Int      @id @default(autoincrement())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Contact Info
  fullName        String
  email           String
  phone           String?

  // Business Details
  businessName    String
  industryType    String
  currentWebsite  String?
  hasNoWebsite    Boolean  @default(false)

  // Project Requirements
  features        String   // JSON array stored as string
  otherFeatures   String?
  budgetRange     String
  timeline        String
  additionalInfo  String?

  // Status tracking
  status          String   @default("NEW")  // NEW | CONTACTED | PAID
  contacted       Boolean  @default(false)  // Keep for backward compatibility
  notes           String?

  // Payment tracking
  paidAt          DateTime?
  revenue         Float?

  // Project Status Tracking
  projectStatus   String   @default("NOT_STARTED")  // NOT_STARTED | JUST_STARTED | IN_PROGRESS | WAITING_FOR_FEEDBACK | FINISHED_AND_LIVE | ON_HOLD | CANCELLED
  projectNotes    String?
  liveUrl         String?
  goLiveDate      DateTime?

  // Stripe Integration
  stripeCustomerId     String?   @unique
  stripeSubscriptionId String?   @unique
  subscriptionStatus   String?   // active | past_due | canceled | unpaid
  subscriptionCurrentPeriodEnd DateTime?
  subscriptionCanceledAt DateTime?

  // Billing Status
  billingStatus   String   @default("PENDING")  // PENDING | PAID | OVERDUE | CANCELLED
  lastInvoiceDate DateTime?
  lastInvoicePaidAt DateTime?

  // Payment Link Tokens
  setupFeeToken      String?   @unique
  subscriptionToken  String?   @unique

  // Relations for Customer Management Systems
  customerNotes   CustomerNote[]
  customerFiles   CustomerFile[]
  deployment      CustomerDeployment?
}

model CustomerNote {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  customerId   Int
  customer     IntakeSubmission @relation(fields: [customerId], references: [id], onDelete: Cascade)
  content      String
  noteType     String   @default("GENERAL")  // CALL | MEETING | EMAIL | GENERAL
  authorName   String?

  @@index([customerId])
  @@index([noteType])
  @@index([createdAt])
}

model CustomerFile {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  customerId   Int
  customer     IntakeSubmission @relation(fields: [customerId], references: [id], onDelete: Cascade)
  fileName     String
  fileKey      String   @unique  // Storage path: "customers/123/logos/logo.png"
  fileSize     Int
  mimeType     String
  category     String   @default("GENERAL")  // LOGO | PHOTO | CONTENT | DOCUMENT | GENERAL
  description  String?

  @@index([customerId])
  @@index([category])
}

model CustomerDeployment {
  id                    Int      @id @default(autoincrement())
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  customerId            Int      @unique
  customer              IntakeSubmission @relation(fields: [customerId], references: [id], onDelete: Cascade)
  cfProjectId           String?
  cfProjectName         String?
  cfProductionUrl       String?
  customDomain          String?
  domainStatus          String   @default("NONE")  // NONE | DNS_PENDING | DNS_CONFIGURED | ACTIVE | ERROR
  deploymentStatus      String   @default("NOT_DEPLOYED")  // NOT_DEPLOYED | DEPLOYING | DEPLOYED | FAILED
  lastDeploymentAt      DateTime?
  lastDeploymentId      String?
  lastDeploymentError   String?
  gitRepoUrl            String?
  gitBranch             String   @default("main")
}
